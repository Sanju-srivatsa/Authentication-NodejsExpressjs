<%- include('adminpartial'); %><br> 
<body >
  <form  style="float:right" action="/ad/Meals" method="POST">
    <label for="date">sort by</label>
    <input type="date" name="date" value="DATE">
    <input type="submit">
  </form>
  <button class="btn btn-success align-items-center d-flex"> <h2>Meals List</h2></button> <br> <br> 
    <table class="table table-bordered table-striped">
        <thead>
          <tr>
            <th scope="col">USERNAME </th>
            <th scope="col">MEAL ID </th>
            <th scope="col">FOOD NAME</th>
            <th scope="col">DATE TIME</th>
            <th scope="col">Description</th>
            <th scope="col">CALORIES</th>
          </tr>
          </tr>
        </thead>
        <tbody>
            <% meals.forEach((meal)=>{ %>
            <tr>
              <th scope="row"><%= meal.username %></th>
              <td><%= meal.mealId %> </td>
              <td><%= meal.foodname %> </td>
              <td><%= meal.datetime.toISOString().split("T").join(" ").slice(0,19) %> </td>
              <td><%= meal.description %>  </td>
              <td><%= meal.calories %>  </td>
            </tr>
             <% })  %> 
       </tbody>
       </table>
     
</body>
